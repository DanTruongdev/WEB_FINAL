{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}



{% block body %}
    <div class="container col-md-10 text-center">
        {% for flash in app.flashes('Success') %}
            <p class="alert alert-warning">{{flash}}</p>
        {% endfor %}
        {% for flash in app.flashes('Error') %}
            <p class="alert alert-danger">{{flash}}</p>
        {% endfor %}
`   <h2 class="text-primary">Student List</h2>
    <a href="{{path('student_add')}}" class="btn btn-success">Add new a student</a>
    <table class="table table-bordered table-hover mt-3">
        <thead class="table-primary">
            <tr>
                <th>Student ID</th>
                <th>Name
                <a href="{{path('sort_asc')}}"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRIf5w0EW4q28wMLGJNayTeh14DWRsSQ7L0kA&usqp=CAU" width="20px" height="20px" alt=""></a>
                <a href="{{path('sort_desc')}}"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/9c/Circle_arrow_down_font_awesome.svg/1200px-Circle_arrow_down_font_awesome.svg.png" width="20px" height="20px" alt=""></a>
                </th>
                <th>Image</th>
                <th>Menu</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>{{student.id}}</td>
                <td>{{student.name}}</td>
                <td>  
                    <a href="{{path('student_detail', {'id': student.id})}}">
                        <img src="{{student.image}}" width="90"  alt="student image">
                    </a>
                </td>
                <td>
                    <a href="{{path('student_edit',{'id':student.id})}}" class="btn btn-warning">Edit</a>
                    <a href="{{path('student_delete', {'id': student.id})}}" class="btn btn-danger"
                    onclick=" return confirm('Do you want to delete this student?');"
                    >Delete</a>
                </td>
            </tr>   
            {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}