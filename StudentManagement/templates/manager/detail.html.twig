{% extends 'base.html.twig' %}

{% block title %}Manager{% endblock %}



{% block body %}
    <div class="container col-md-6 mt-5 mb-4">
        <div class="row">
            <div class="col">
                <img src="{{manager.image}}" width="300px"  alt="manager image">
            </div>
            <div class="col text-center">
                <h1 class="text text-success">{{manager.name}}</h1>
                <h5>DOB: {{manager.dob| date('d-m-Y')}}</h5>            
                <h5>Address: {{manager.address}}</h5>
                <h5>Phone: {{manager.phone}}</h5>
                <h5>Department:</h5>
                {% for m in manager.department %}
                    <h6>{{m.name}}</h6>
                {% endfor %}
            </div>

        </div>

    </div>
{% endblock %}